<%- include ("partials/header.ejs") %>

<div class="container-work">
  <div class="heading">
    <h2><%= locals.date %></h2>
  </div>


  <% if (locals.itemsList) { %>
    <form action="/delete" method="post">
      <div class="box">
        <% itemsList.forEach(function(item) { %>
          <div class="item">
            <input class="checkbox" name="itemDelete" type="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
            <label>
              <%= item.name %>
            </label>
          </div> 
          <% }) %>
      </div>

    </form>
  
  <% } else { %>
    <div class="box">
        <div class="item">
          <input class="checkbox" type="checkbox">
          <label>
            <%= locals.emptyData %>
          </label>
        </div> 
    </div>
    <% } %>



  <div class="new-item">
    <form action="/today" method="post">
      <input class="new-task" type="text" name="newItem" placeholder="New Item">
      <button type="submit" name="list">+</button>
  </form>
  </div>


</div>
 
        



<%- include ("partials/footer.ejs") %>