<%- include ("partials/header.ejs") %>
<div class="container-work">
    <div class="heading">
        <h2>Work List</h2>
    </div>

    <% if (locals.workList) { %>
      <form action="/deletework" method="post">
        <div class="box">
          <% workList.forEach(function(work) { %>
            <div class="item">
              <input class="checkbox" type="checkbox" name="workDelete" value="<%= work._id %>" onChange="this.form.submit()">
              <label>
                <%= work.name %>
              </label>
            </div> 
            <% }) %>
        </div>

      </form>

      <% } else { %>
        <div class="box">
            <div class="item">
              <input class="checkbox" type="checkbox">
              <label>
                <%= locals.emptyData %>
              </label>
            </div> 
        </div>
        <% } %>
  
    <div class="new-item">
      <form action="/work" method="post">
        <input class="new-task" type="text" name="newWorkItem" placeholder="New Item">
        <button type="submit" name="list">+</button>
    </form>
    </div>





</div>



<%- include ("partials/footer.ejs") %>